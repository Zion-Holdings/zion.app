import React, { useEffect, useCallback } from 'react';

interface AnalyticsTrackerProps {
  pageTitle?: string;
  pagePath?: string;
  customEvents?: Array<{
    name: string;
    parameters?: Record<string, unknown>;
  }>;
}

// Performance entry types for Core Web Vitals

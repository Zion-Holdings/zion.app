{
  "name": "zion-multichain-suite",
  "version": "0.1.0",
  "private": true,
  "description": "Secure, modular smart contracts and deploy scripts for ZION$ multichain (zkSync, Starknet relay, L2s)",
  "license": "MIT",
  "scripts": {
    "build": "hardhat compile",
    "clean": "hardhat clean && rimraf ./artifacts ./cache",
    "deploy": "ts-node --transpile-only scripts/deploy/deployZion.ts",
    "publish-abi": "ts-node --transpile-only scripts/utils/publishAbi.ts",
    "lint": "eslint --ext .ts ./scripts",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.13",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.14",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.1",
    "@nomicfoundation/ignition-core": "^0.15.13",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^7.7.0",
    "@typescript-eslint/parser": "^7.7.0",
    "chai": "^4.5.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.8.0",
    "ethers": "^6.15.0",
    "hardhat": "^2.22.5",
    "hardhat-gas-reporter": "^1.0.10",
    "rimraf": "^5.0.5",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}

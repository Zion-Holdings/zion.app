# Cursor Extensions Environment Variables

# OpenAI API Key (for AI Assistant extension)
# OPENAI_API_KEY=your_openai_api_key_here

# Snyk API Key (for Security Scanner extension)
# SNYK_TOKEN=your_snyk_token_here

# WebSocket Server Port
EXTENSION_SERVER_PORT=3001

# Log Level (debug, info, warn, error)
LOG_LEVEL=info

# Extension Configuration
ENABLE_CODE_QUALITY=true
ENABLE_PERFORMANCE_MONITOR=true
ENABLE_AI_ASSISTANT=true
ENABLE_SECURITY_SCANNER=true
ENABLE_AUTO_IMPROVER=true
ENABLE_PROJECT_AUTOMATION=true

# File Watching Patterns
WATCH_PATTERNS=src/**/*.{ts,tsx,js,jsx},pages/**/*.{ts,tsx,js,jsx},components/**/*.{ts,tsx,js,jsx},lib/**/*.{ts,tsx,js,jsx}

# Performance Monitoring
PERFORMANCE_CHECK_INTERVAL=300000
MEMORY_THRESHOLD=80
CPU_THRESHOLD=80

# Security Scanning
SECURITY_SCAN_INTERVAL=3600000
VULNERABILITY_SEVERITY=medium

# Code Quality
ESLINT_FIX_ON_SAVE=true
PRETTIER_FORMAT_ON_SAVE=true
TYPESCRIPT_CHECK_ON_SAVE=true

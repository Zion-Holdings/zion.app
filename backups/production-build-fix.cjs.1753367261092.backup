}

// Run if called directly
if (require.main === module) {
  const fix = new ProductionBuildFix();
  fix.runProductionBuild().catch((error) => {
    logger.error('Production build fix failed:', error);
    process.exit(1);
  });
}

module.exports = ProductionBuildFix;



  getStatus() {
    return {
      isRunning: this.isRunning,
      stats: this.stats,
      lastImprovements: this.improvements.slice(-5),
      lastErrors: this.errors.slice(-5)
    };
  }
}

// CLI interface
if (require.main === module) {
  const system = new EfficientImprovementSystem();
  
  // Handle graceful shutdown
  process.on('SIGINT', async () => {
    logger.info('\nüõë Received SIGINT, stopping gracefully...');
    await system.stop();
    process.exit(0);
  });
  
  process.on('SIGTERM', async () => {
    logger.info('\nüõë Received SIGTERM, stopping gracefully...');
    await system.stop();
    process.exit(0);
  });
  
  // Start the system
  system.start().catch(error => {
    logger.error('‚ùå Failed to start efficient improvement system:', error);
    process.exit(1);
  });
}

module.exports = EfficientImprovementSystem; 
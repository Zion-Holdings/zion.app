          // Reassign any tasks from offline nodes
          if (node.currentTask) {
            const task = this.currentTasks.get(node.currentTask);
            if (task) {
              task.status = 'queued';
              task.assignedTo = null;
              task.startedAt = null;
              this.currentTasks.delete(node.currentTask);
              this.taskQueue.unshift(task);
            }
          }
        }
      }
    }, 30000);
  }


  async runFinalAutomation() {
    this.log('Starting final automation...');

    try {
      // Step 1: Create minimal working app
      this.createMinimalWorkingApp();

      // Step 2: Try to start server with Node.js options
      const serverResult = await this.startWithNodeOptions();

      if (serverResult.success) {
        this.log('ðŸŽ‰ SUCCESS: App is running!');
        this.log('ðŸŒ Open http://localhost:3007 in your browser');
        this.log('ðŸ“Š Health check: http://localhost:3007/api/health');

        // Keep the process running
        process.on('SIGINT', () => {
          this.log('Shutting down...');
          if (serverResult.server) {
            serverResult.server.kill('SIGINT');
          }
          process.exit(0);
        });

        return true;
      } else {
        this.log('âŒ Failed to start server');
        this.log('ðŸ’¡ Try running: npm run dev -- --port 3003');
        return false;
      }

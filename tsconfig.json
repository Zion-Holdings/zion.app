{
  "compilerOptions": {
    "target": "ES2017",
    "useDefineForClassFields": true,
    "lib": [
      "ES2024",
      "DOM",
      "DOM.Iterable",
      "WebWorker",
      "WebWorker.Iterable"
    ],
    "module": "esnext",
    "skipLibCheck": true,
    "importHelpers": false,
    "noEmitHelpers": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/pages/*": [
        "./src/pages/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "@/services/*": [
        "./src/services/*"
      ],
      "@/styles/*": [
        "./src/styles/*"
      ]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitReturns": false,
    "allowJs": true,
    "incremental": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
      "node"
    ],
    "noEmit": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "zion.app/recovered-content/**",
    "contracts/**",
    "dao/**",
    "zion-os/**",
    "zion_academy/**",
    "packages/**",
    "monitoring/**",
    "scripts/**",
    "server/**",
    "cypress/**",
    "**/*.disabled/**",
    "__tests__.disabled/**",
    "plugins.disabled/**",
    "test.disabled/**",
    "services.disabled.temp/**",
    "data.temp/**",
    "src_backup/**",
    "components/**",
    "pages/**",
    "data/**",
    "utils/**"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}

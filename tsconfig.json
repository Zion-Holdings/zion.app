{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "zion.app/recovered-content/**",
    "contracts/**",
    "dao/**",
    "zion-os/**",
    "zion_academy/**",
    "packages/**",
    "monitoring/**",
    "scripts/**",
    "server/**",
    "cypress/**",
    "**/*.disabled/**",
    "__tests__.disabled/**",
    "plugins.disabled/**",
    "test.disabled/**",
    "services.disabled.temp/**",
    "data.temp/**",
    "src_backup/**",
    "components/**",
    "pages/**"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}

{
  "compilerOptions": {
    "target": "ES2017",
    "useDefineForClassFields": true,
    "lib": [
      "ES2024",
      "DOM",
      "DOM.Iterable",
      "WebWorker",
      "WebWorker.Iterable"
    ],
    "module": "esnext",
    "skipLibCheck": true,
    "importHelpers": false,
    "noEmitHelpers": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/pages/*": [
        "./pages/*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/types/*": [
        "./types/*"
      ],
      "@/utils/*": [
        "./utils/*"
      ],
      "@/services/*": [
        "./services/*"
      ],
      "@/styles/*": [
        "./styles/*"
      ]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitReturns": false,
    "allowJs": true,
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "types": [
      "node"
    ],
    "jsx": "preserve",
    "noEmit": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    "pages/**/*.ts",
    "pages/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "utils/**/*.ts",
    "services/**/*.ts",
    "styles/**/*.css"
  ],
  "exclude": [
    "node_modules",
    "zion.app/recovered-content/**",
    "contracts/**",
    "dao/**",
    "zion-os/**",
    "zion_academy/**",
    "packages/**",
    "monitoring/**",
    "scripts/**",
    "server/**",
    "cypress/**",
    "**/*.disabled/**",
    "__tests__.disabled/**",
    "plugins.disabled/**",
    "test.disabled/**",
    "services.disabled.temp/**",
    "data.temp/**",
    "src_backup/**"
  ]
}

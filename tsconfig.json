{
  "compilerOptions": {
    "target": "ES2017",
    "useDefineForClassFields": true,
    "lib": [
      "ES2024",
      "DOM",
      "DOM.Iterable",
      "WebWorker",
      "WebWorker.Iterable"
    ],
    "module": "esnext",
    "skipLibCheck": true,
    "importHelpers": false,
    "noEmitHelpers": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    /* Bundler mode */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitReturns": false,
    "allowJs": true,
    "incremental": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}

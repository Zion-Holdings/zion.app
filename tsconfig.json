{
  "compilerOptions": {
    "target": "ES2017",
    "useDefineForClassFields": true,
    "lib": [
      "ES2024",
      "DOM",
      "DOM.Iterable",
      "WebWorker",
      "WebWorker.Iterable"
    ],
    "module": "esnext",
    "skipLibCheck": true,
    "importHelpers": false,
    "noEmitHelpers": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitReturns": false,
    "allowJs": true,
    "incremental": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/main.tsx",
    "src/App.tsx",
    "src/App.css",
    "src/index.css",
    "src/pages/MicroSaasServices.tsx",
    "src/pages/PricingPage.tsx",
    "src/data/microSaasServices.ts",
    "src/types/listings.ts"
  ],
  "exclude": [
    "node_modules",
    "src/components",
    "src/hooks",
    "src/store",
    "src/pages/**/*",
    "!src/pages/MicroSaasServices.tsx",
    "!src/pages/PricingPage.tsx"
  ]
}

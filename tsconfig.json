{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/main.tsx",
    "src/pages/Home.tsx",
    "src/index.css",
    "pages/about.tsx",
    "pages/services.tsx",
    "pages/contact.tsx",
    "pages/careers.tsx",
    "pages/privacy.tsx",
    "components/layout/UltraFuturisticNavigation2045.tsx",
    "components/layout/UltraFuturisticFooter2045.tsx"
  ],
  "exclude": [
    "node_modules",
    "zion.app/recovered-content/**",
    "contracts/**",
    "dao/**",
    "zion-os/**",
    "zion_academy/**",
    "packages/**",
    "monitoring/**",
    "scripts/**",
    "server/**",
    "cypress/**",
    "**/*.disabled/**",
    "__tests__.disabled/**",
    "plugins.disabled/**",
    "test.disabled/**",
    "services.disabled.temp/**",
    "data.temp/**",
    "src_backup/**",
    "components/backgrounds/**",
    "components/layout/Enhanced*.tsx",
    "components/layout/Footer.tsx",
    "components/layout/Header.tsx",
    "components/layout/Layout.tsx",
    "components/layout/UltraAdvanced*.tsx",
    "components/layout/UltraFuturisticFooter20*.tsx",
    "components/layout/UltraFuturisticNavigation20*.tsx",
    "components/layout/UltraFuturisticLayout*.tsx",
    "components/ui/UltraFuturisticBackground*.tsx",
    "components/Homepage*.tsx",
    "components/LoadingSpinner.tsx",
    "components/MobileOptimizer.tsx",
    "components/PerformanceMonitor.tsx",
    "components/PerformanceOptimizer.tsx",
    "components/SEO.tsx",
    "src/pages/**/*.tsx",
    "src/components/**/*.tsx",
    "src/hooks/**/*.ts",
    "src/store/**/*.ts",
    "src/layout/**/*.tsx",
    "src/data/**/*.ts",
    "src/context/**/*.tsx",
    "src/integrations/**/*.ts",
    "src/types/**/*.ts",
    "src/utils/**/*.ts"
  ]
}

{
  "compilerOptions": {
    "target": "ES2024",
    "useDefineForClassFields": true,
    "lib": ["ES2024", "DOM", "DOM.Iterable", "WebWorker", "WebWorker.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "importHelpers": false,
    "noEmitHelpers": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/pages/*": ["./src/pages/*", "./pages/*"],
      "@/components/*": ["./src/components/*"],
      "@/api/*": ["./src/api/*"],
      "@/types/*": ["./src/types/*", "./types/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/context/*": ["./src/context/*"],
      "@/services/*": ["./src/services/*"],
      "react-router-dom": ["./src/stubs/react-router-dom.tsx"],
      "next-cloudinary": ["./types/next-cloudinary.d.ts"],
      "types/*": ["./types/*"]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "incremental": true,
    "typeRoots": ["./node_modules/@types", "./types"],
    "types": ["node"],
    "jsx": "preserve",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    /* Modern TypeScript Features */
    "exactOptionalPropertyTypes": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": false,
    "useUnknownInCatchVariables": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false,
    /* Performance optimizations */
    "assumeChangesOnlyAffectDirectDependencies": true,
    "disableSourceOfProjectReferenceRedirect": true,
    "disableSizeLimit": true,
    "generateCpuProfile": "profile.cpuprofile",
    "listEmittedFiles": false,
    "listFiles": false,
    "traceResolution": false,
    /* Advanced features */
    "allowArbitraryExtensions": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "preserveConstEnums": true,
    "verbatimModuleSyntax": true
  },
  "include": [
    "src",
    "src/types",
    "pages",
    "types/**/*.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/components/ui/chart.tsx",
    "src/store/index.ts",
    "temp_essential_pages",
    "pages_backup",
    "scripts",
    ".next",
    "out",
    "dist",
    "build",
    "coverage",
    "cypress",
    "monitoring",
    "netlify",
    "supabase",
    "browserstack.config.ts",
    "cypress.config.ts",
    "playwright.config.ts",
    "vite.config.ts",
    "vitest.config.ts",
    "tests",
    "stories",
    "stackbit.config.ts",
    "tailwind.config.ts",
    "src/utils/supabase/server.ts",
    "src/utils/systemHealthMonitor.ts",
    "src/utils/supabase/middleware.ts",
    "src/utils/withErrorHandling.ts",
    "src/utils/validateEnv.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx"
  ]
}

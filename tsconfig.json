{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/pages/*": [
        "./src/pages/*",
        "./pages/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/api/*": [
        "./src/api/*"
      ],
      "@/types/*": [
        "./src/types/*",
        "./types/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/context/*": [
        "./src/context/*"
      ],
      "@/services/*": [
        "./src/services/*"
      ],
      "react-router-dom": [
        "./src/shims/react-router-dom.ts"
      ],
      "next-cloudinary": [
        "./types/next-cloudinary.d.ts"
      ],
      "types/*": [
        "./types/*"
      ]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    /* Linting */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitReturns": true,
    "allowJs": true,
    "incremental": true,
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "jsx": "preserve",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src",
    "src/types",
    "pages",
    "types/**/*.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/components/ui/chart.tsx",
    "src/store/index.ts",
    "temp_essential_pages",
    "pages_backup",
    "scripts",
    ".next",
    "out",
    "dist",
    "build",
    "coverage",
    "cypress",
    "monitoring",
    "netlify",
    "supabase",
    "browserstack.config.ts",
    "playwright.config.ts",
    "cypress.config.ts",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "cypress.config.ts"
  ]
}

{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/main.tsx",
    "src/App.tsx",
    "src/pages/Home.tsx",
    "src/pages/Contact.tsx",
    "src/pages/About.tsx",
    "src/pages/NotFound.tsx",
    "src/index.css"
  ],
  "exclude": [
    "node_modules",
    "src/components",
    "src/context",
    "src/data",
    "src/hooks",
    "src/layout",
    "src/lib",
    "src/store",
    "src/types"
  ]
}

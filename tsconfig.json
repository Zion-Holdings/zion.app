{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@/pages/*": [
        "./src/pages/*"
      ],
      "@/components/*": [
        "./src/components/*"
      ],
      "@/types/*": [
        "./src/types/*"
      ],
      "@/utils/*": [
        "./src/utils/*"
      ],
      "@/services/*": [
        "./src/services/*"
      ],
      "@/styles/*": [
        "./src/styles/*"
      ],
      "@/lib/*": [
        "./src/lib/*"
      ],
      "@/data/*": [
        "./src/data/*"
      ]
    },
    "allowJs": true,
    "incremental": true,
    "esModuleInterop": true
  },
  "include": [
    "src/main.tsx",
    "src/App.tsx",
    "src/App.css",
    "src/pages/Home.tsx",
    "src/pages/Services.tsx"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "exclude": [
    "node_modules",
    "src/components/conflicted/**/*",
    "src/components/disabled/**/*",
    "src/components/Advanced*",
    "src/components/CategoriesSection.tsx",
    "src/components/FeaturedListingsSection.tsx",
    "src/components/home/Enhanced*",
    "src/components/home/FeatureCTAs.tsx",
    "src/components/home/HomePageSkeleton.tsx",
    "src/components/ui/data-visualization.tsx",
    "src/data/enhancedServicesData.ts",
    "src/data/microSaasServices.ts",
    "src/hooks/useBlockchainWeb3.ts",
    "src/pages/HomePage.tsx"
  ]
}

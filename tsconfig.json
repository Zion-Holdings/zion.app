{
  "compilerOptions": {
    "target": "ES2017",
    "useDefineForClassFields": true,
    "lib": [
      "ES2024",
      "DOM",
      "DOM.Iterable",
      "WebWorker",
      "WebWorker.Iterable"
    ],
    "module": "esnext",
    "skipLibCheck": true,
    "importHelpers": false,
    "noEmitHelpers": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "noImplicitReturns": false,
    "allowJs": true,
    "incremental": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "src/App.tsx",
    "src/main.tsx",
    "src/pages/Home.tsx",
    "src/components/SEO.tsx",
    "src/components/HeroSection.tsx",
    "src/components/home/FeatureCTAs.tsx",
    "src/components/home/FeatureHighlights.tsx",
    "src/components/home/ITServiceRequestHero.tsx",
    "src/components/home/TestimonialsSection.tsx",
    "src/components/home/EnhancedQuickAccess.tsx",
    "src/components/ui/button.tsx",
    "src/components/ui/card.tsx",
    "src/components/ui/badge.tsx",
    "src/components/ui/input.tsx",
    "src/components/ui/avatar.tsx",
    "src/components/ui/select.tsx",
    "src/components/ui/tabs.tsx",
    "src/components/ui/accordion.tsx",
    "src/components/ui/separator.tsx",
    "src/components/ui/alert.tsx",
    "src/components/ui/steps.tsx",
    "src/components/ui/loading-spinner.tsx",
    "src/components/ui/toaster.tsx",
    "src/components/ui/sonner.tsx",
    "src/components/ThemeProvider.tsx",
    "src/components/FloatingCTA.tsx",
    "src/components/Footer.tsx",
    "src/hooks/useScrollToTop.ts",
    "src/lib/utils.ts"
  ],
  "exclude": [
    "src/pages/disabled/**/*",
    "src/store/**/*",
    "src/components/ui/UltraFuturistic*.tsx",
    "src/components/ui/Advanced*.tsx",
    "src/components/ui/Enhanced*.tsx",
    "src/components/ui/Quantum*.tsx",
    "src/components/ui/ServiceCard*.tsx",
    "src/components/ui/ChainBadge.tsx",
    "src/components/ui/ChatbotWidget.tsx",
    "src/components/ui/Modal.tsx",
    "src/components/ui/Notification*.tsx",
    "src/components/ui/PageLoader.tsx",
    "src/components/ui/Performance*.tsx",
    "src/components/ui/QuoteRequestModal.tsx",
    "src/components/ui/SearchComponent.tsx",
    "src/components/ui/StatusTracker.tsx",
    "src/components/ui/Toast.tsx",
    "src/components/ui/BridgeForm.tsx",
    "src/components/ui/AnimatedAurora.tsx"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}

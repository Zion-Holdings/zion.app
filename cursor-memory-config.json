{
  "version": "1.0.0",
  "description": "Configuration for Cursor Memory Learning Automation",
  "automation": {
    "enabled": true,
    "autoRun": true,
    "interval": "1h",
    "maxMemoryEntries": 10000,
    "confidenceThreshold": 0.7,
    "learningRate": 0.1,
    "batchSize": 10
  },
  "scanning": {
    "sources": [
      "./logs",
      "./automation_temp/logs",
      "./cursor-automation/logs",
      "./.cursor",
      "./data",
      "./scripts",
      "./components",
      "./pages",
      "./utils"
    ],
    "filePatterns": [
      "*.log",
      "*.json",
      "*.txt",
      "*.md",
      "*.js",
      "*.ts",
      "*.jsx",
      "*.tsx"
    ],
    "excludePatterns": [
      "node_modules/**",
      ".git/**",
      ".next/**",
      "dist/**",
      "build/**"
    ]
  },
  "ai": {
    "model": "gpt-4",
    "temperature": 0.3,
    "maxTokens": 4000,
    "timeout": 30000
  },
  "memory": {
    "storage": {
      "type": "file",
      "directory": "./cursor-memory",
      "backupEnabled": true,
      "compressionEnabled": false
    },
    "indexing": {
      "enabled": true,
      "updateInterval": "30m",
      "maxIndexSize": 100000
    },
    "categorization": {
      "enabled": true,
      "autoTag": true,
      "confidenceScoring": true
    }
  },
  "knowledge": {
    "extraction": {
      "enabled": true,
      "minContentLength": 100,
      "maxContentLength": 10000,
      "includeMetadata": true
    },
    "processing": {
      "deduplication": true,
      "relationshipMapping": true,
      "similarityThreshold": 0.3
    },
    "categorization": {
      "categories": [
        "technical-solutions",
        "best-practices",
        "user-preferences",
        "workflow-patterns",
        "error-handling",
        "performance-optimization",
        "security-considerations",
        "automation-strategies",
        "development-insights",
        "project-specific"
      ]
    }
  },
  "output": {
    "formats": [
      "json",
      "markdown",
      "cursor-memory"
    ],
    "files": {
      "memoryIndex": "memory-index.json",
      "knowledgeGraph": "knowledge-graph.json",
      "learningHistory": "learning-history.json",
      "memorySummary": "memory-summary.json",
      "cursorMemory": "cursor-memory.json"
    }
  },
  "logging": {
    "enabled": true,
    "level": "info",
    "file": "./cursor-memory/logs/automation.log",
    "maxSize": "10MB",
    "maxFiles": 5
  },
  "monitoring": {
    "enabled": true,
    "metrics": [
      "memoryEntries",
      "knowledgeExtraction",
      "processingTime",
      "confidenceScores",
      "categoryDistribution"
    ],
    "alerts": {
      "lowConfidence": 0.5,
      "highErrorRate": 0.1,
      "memoryOverflow": 0.9
    }
  }
}

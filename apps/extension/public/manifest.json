{
  "manifest_version": 3,
  "name": "Zion Assistant",
  "version": "0.1.0",
  "description": "Ask ZionGPT, post jobs, search resumes, and track projects.",
  "action": {
    "default_title": "Zion Assistant",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "permissions": ["storage", "notifications", "identity"],
  "host_permissions": [
    "http://localhost:4000/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}

{
  "manifest_version": 3,
  "name": "Zion Assistant",
  "version": "0.1",
  "description": "Ask ZionGPT and manage jobs right from your browser.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage", "notifications"],
  "host_permissions": ["https://api.openai.com/"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}

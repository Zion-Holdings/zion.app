{
  "manifest_version": 3,
  "name": "Cursor Automated Communication",
  "version": "2.0.0",
  "description": "Automated chat communications for continuous app improvement across all Cursor installations",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "webNavigation",
    "scripting",
    "background"
  ],
  "host_permissions": [
    "http://localhost:*",
    "https://api.cursor.sh/*",
    "file://*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Cursor Automated Communication",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle-automation": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "Cmd+Shift+A"
      },
      "description": "Toggle automated communication"
    },
    "send-improvement": {
      "suggested_key": {
        "default": "Ctrl+Shift+I",
        "mac": "Cmd+Shift+I"
      },
      "description": "Send improvement suggestion"
    },
    "sync-computers": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Cmd+Shift+S"
      },
      "description": "Sync with other computers"
    }
  }
} 
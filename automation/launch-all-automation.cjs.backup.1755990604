  async stopAllSystems() {
    this.log("üõë Stopping all automation systems...");
    
    const results = [];
    
    for (const system of this.config.systems) {
      const success = await this.stopSystem(system);
      results.push({ system: system.name, success });
      
      // Wait a moment between stops
      await new Promise(resolve => setTimeout(resolve, 1000));
    }
    
    const successfulStops = results.filter(r => r.success).length;
    const totalSystems = this.config.systems.length;
    
    this.log(`üìä System shutdown complete: ${successfulStops}/${totalSystems} systems stopped successfully`);
    
    return successfulStops === totalSystems;
  }

  async restartAllSystems() {
    this.log("üîÑ Restarting all automation systems...");
    
    await this.stopAllSystems();
    
    // Wait before restarting
    this.log("‚è≥ Waiting 5 seconds before restarting...");
    await new Promise(resolve => setTimeout(resolve, 5000));
    
    await this.startAllSystems();
  }

  async checkSystemHealth() {
    this.log("üîç Checking system health...");
    
    try {
      // Check PM2 status
      const pm2Result = await this.runCommand("pm2", ["status", "--no-daemon"]);
      const pm2Healthy = pm2Result.status === 0;
      
      // Check ultimate redundancy system
      const redundancyResult = await this.runCommand("bash", ["automation/start-ultimate-redundancy.sh", "status"]);
      const redundancyHealthy = redundancyResult.status === 0;
      
      // Check master orchestrator
      const orchestratorResult = await this.runCommand("node", ["automation/master-automation-orchestrator.cjs", "status"]);
      const orchestratorHealthy = orchestratorResult.status === 0;
      
      const overallHealth = pm2Healthy && redundancyHealthy && orchestratorHealthy;
      
      this.log(`üìä System Health Status:`);
      this.log(`  PM2: ${pm2Healthy ? '‚úÖ' : '‚ùå'}`);
      this.log(`  Ultimate Redundancy: ${redundancyHealthy ? '‚úÖ' : '‚ùå'}`);
      this.log(`  Master Orchestrator: ${orchestratorHealthy ? '‚úÖ' : '‚ùå'}`);
      this.log(`  Overall: ${overallHealth ? '‚úÖ HEALTHY' : '‚ùå UNHEALTHY'}`);
      
      return overallHealth;
    } catch (error) {
      this.log(`‚ùå Health check error: ${error.message}`, "ERROR");
      return false;
    }
  }

  async performSystemRecovery() {
    this.log("üîÑ Performing system recovery...");
    
    try {
      // Stop all systems
      await this.stopAllSystems();
      
      // Wait for cleanup
      await new Promise(resolve => setTimeout(resolve, 5000));
      
      // Start all systems
      await this.startAllSystems();
      
      // Perform health check
      const health = await this.checkSystemHealth();
      
      if (health) {
        this.log("‚úÖ System recovery completed successfully");
        return true;
      } else {
        this.log("‚ö†Ô∏è System recovery completed but health check failed", "WARN");
        return false;
      }
    } catch (error) {
      this.log(`‚ùå System recovery failed: ${error.message}`, "ERROR");
      return false;
    }
  }

  getSystemStatus() {
    return {
      timestamp: new Date().toISOString(),
      systems: this.config.systems.map(system => ({
        name: system.name,
        type: system.type,
        command: system.command,
        args: system.args
      })),
      monitoring: this.config.monitoring,
      uptime: process.uptime(),
      memory: process.memoryUsage()
    };
  }

  initializeSystem() {
    this.log("üîß Initializing Comprehensive Automation Launcher...");
    
    // Set up process monitoring
    process.on('SIGINT', () => {
      this.log("üõë Shutting down comprehensive automation launcher...");
      this.stopAllSystems().then(() => {
        process.exit(0);
      });
    });
    
    process.on('SIGTERM', () => {
      this.log("üõë Shutting down comprehensive automation launcher...");
      this.stopAllSystems().then(() => {
        process.exit(0);
      });
    });
    
    // Set up error handling
    process.on('uncaughtException', (error) => {
      this.log(`‚ùå Uncaught exception: ${error.message}`, "ERROR");
    });
    
    process.on('unhandledRejection', (reason, promise) => {
      this.log(`‚ùå Unhandled rejection at: ${promise}, reason: ${reason}`, "ERROR");
    });
  }

  startMonitoring() {
    this.log("üöÄ Starting comprehensive automation monitoring...");
    
    // Initial health check
    this.checkSystemHealth();
    
    // Set up periodic health checks
    setInterval(() => {
      this.checkSystemHealth();
    }, this.config.monitoring.healthCheckInterval);
    
    this.log("‚úÖ Comprehensive automation monitoring started");
  }
}


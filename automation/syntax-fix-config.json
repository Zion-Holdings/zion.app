{
  "monitor": {
    "enabled": true,
    "watch": true,
    "interval": 30000,
    "autoFix": true,
    "logLevel": "info"
  },
  "orchestrator": {
    "enabled": true,
    "watch": true,
    "interval": 15000,
    "autoFix": true,
    "aggressive": false,
    "reportOnly": false
  },
  "continuous": {
    "enabled": true,
    "watchMode": true,
    "interval": 10000,
    "aggressive": false,
    "autoCommit": true,
    "backupFiles": true,
    "maxRetries": 3,
    "logLevel": "info"
  },
  "fixers": {
    "import": {
      "enabled": true,
      "fixExtensions": true,
      "fixDuplicates": true
    },
    "semicolon": {
      "enabled": true,
      "fixMissing": true,
      "fixDouble": true
    },
    "bracket": {
      "enabled": true,
      "fixUnclosed": true,
      "fixMismatched": true
    },
    "quote": {
      "enabled": true,
      "fixUnclosed": true,
      "fixMismatched": true
    },
    "typescript": {
      "enabled": true,
      "fixTypeErrors": true,
      "fixImportErrors": true
    },
    "react": {
      "enabled": true,
      "fixJSX": true,
      "fixProps": true
    },
    "nextjs": {
      "enabled": true,
      "fixSSR": true,
      "fixStatic": true
    }
  },
  "patterns": {
    "doubleSemicolon": {
      "enabled": true,
      "pattern": ";;",
      "replacement": ";"
    },
    "doubleComma": {
      "enabled": true,
      "pattern": ",,",
      "replacement": ","
    },
    "emptyParentheses": {
      "enabled": true,
      "pattern": "\\\\(\\\\s*\\\\)",
      "replacement": "()"
    },
    "emptyBrackets": {
      "enabled": true,
      "pattern": "\\[\\s*\\]",
      "replacement": "[]"
    },
    "emptyBraces": {
      "enabled": true,
      "pattern": "\\{\\s*\\}",
      "replacement": "{}"
    }
  },
  "logging": {
    "level": "info",
    "file": "syntax-fix.log",
    "console": true,
    "maxFileSize": "10MB",
    "maxFiles": 5
  },
  "backup": {
    "enabled": true,
    "directory": ".syntax-fix-backups",
    "maxBackups": 100,
    "compress": false
  },
  "git": {
    "autoCommit": true,
    "autoPush": true,
    "commitMessage": "Auto-fix syntax errors - {timestamp}",
    "branch": "main"
  },
  "notifications": {
    "enabled": false,
    "webhook": "",
    "email": "",
    "slack": ""
  },
  "performance": {
    "maxConcurrentFixes": 5,
    "debounceDelay": 500,
    "retryDelay": 1000,
    "maxRetries": 3
  }
}

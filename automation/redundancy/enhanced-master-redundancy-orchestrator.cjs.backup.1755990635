    }
    
    // Save audit report
    const reportPath = path.join(this.logDir, `audit-report-${Date.now()}.json`);
    fs.writeFileSync(reportPath, JSON.stringify(auditReport, null, 2));
    
    this.log(`ðŸ” Comprehensive system audit completed`);
    return auditReport;

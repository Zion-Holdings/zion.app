{
  "healthCheckInterval": 300000,
  "alertThresholds": {
    "critical": 0.7,
    "warning": 0.85,
    "info": 0.95
  },
  "monitoringMetrics": [
    "workflow_success_rate",
    "execution_time",
    "resource_usage",
    "error_frequency",
    "security_status",
    "dependency_health"
  ],
  "alertChannels": [
    "console",
    "file",
    "webhook"
  ],
  "retentionDays": 30,
  "autoRemediation": true,
  "notifications": {
    "email": {
      "enabled": false,
      "recipients": [],
      "smtp": {
        "host": "",
        "port": 587,
        "secure": false
      }
    },
    "slack": {
      "enabled": false,
      "webhookUrl": "",
      "channel": "#automation-alerts"
    },
    "webhook": {
      "enabled": false,
      "endpoints": []
    }
  },
  "escalation": {
    "enabled": true,
    "levels": [
      {
        "level": 1,
        "delay": 300000,
        "channels": ["console", "file"]
      },
      {
        "level": 2,
        "delay": 900000,
        "channels": ["console", "file", "webhook"]
      },
      {
        "level": 3,
        "delay": 3600000,
        "channels": ["console", "file", "webhook", "email"]
      }
    ]
  },
  "performance": {
    "maxConcurrentChecks": 5,
    "timeout": 60000,
    "retryAttempts": 3,
    "retryDelay": 5000
  }
}
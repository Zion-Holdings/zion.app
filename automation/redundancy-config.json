  "monitoring": {
    "healthCheckInterval": 300000,
    "alertThreshold": 3,
    "logRotation": true,
    "performanceMetrics": true,
    "errorTracking": true,
    "autoRecovery": true,
    "loadBalancing": true,
    "notifications": {
      "enabled": false,
      "email": "",
      "webhook": "",
      "slack": ""
    }
  },
  "logging": {
    "level": "INFO",
    "maxSize": "10MB",
    "maxFiles": 30,
    "compress": true,
    "directory": "automation/logs",
    "files": {
      "main": "ultimate-redundancy.log",
      "pm2": "pm2-redundancy.log",
      "github": "github-redundancy.log",
      "netlify": "netlify-redundancy.log",
      "health": "health-monitor.log"
    }
  },
  "recovery": {
    "autoRestart": true,
    "maxRestartAttempts": 5,
    "restartDelay": 10000,
    "escalationDelay": 30000,
    "fallbackStrategies": [
      "restart_process",
      "restart_ecosystem",
      "regenerate_manifest",
      "restore_backup",
      "manual_intervention"
    ]
  },
  "backup": {
    "enabled": true,
    "interval": "1h",
    "retention": "7d",
    "compression": true,
    "locations": [
      "automation/backups",
      ".github/workflows/backups"
    ]
  },
  "security": {
    "validateScripts": true,
    "checkPermissions": true,
    "auditDependencies": true,
    "scanVulnerabilities": true,
    "rateLimiting": {
      "enabled": true,
      "maxRequests": 100,
      "windowMs": 60000
    }
  }
}
{
  "infiniteImprovement": {
    "enabled": true,
    "logLevel": "info",
    "dashboardPort": 3002,
    "enableSelfModification": true,
    "enablePredictiveOptimization": true,
    "enableAdaptiveLearning": true,
    "maxIterations": 1000,
    "intervals": {
      "analysis": 30000,
      "optimization": 120000,
      "learning": 300000,
      "improvement": 600000,
      "healthCheck": 30000,
      "metricsCollection": 10000
    },
    "thresholds": {
      "performanceScore": 0.8,
      "cpuUsage": 80,
      "memoryUsage": 80,
      "responseTime": 1000,
      "errorRate": 0.05,
      "improvementSuccessRate": 0.7
    },
    "optimization": {
      "enabled": true,
      "maxConcurrentOptimizations": 3,
      "retryAttempts": 3,
      "backupBeforeChanges": true,
      "types": {
        "code_optimization": {
          "enabled": true,
          "priority": "high",
          "maxFileSize": 1048576
        },
        "performance_tuning": {
          "enabled": true,
          "priority": "high",
          "targets": ["cpu", "memory", "response_time"]
        },
        "resource_optimization": {
          "enabled": true,
          "priority": "medium",
          "resources": ["cpu", "memory", "disk", "network"]
        },
        "algorithm_improvement": {
          "enabled": true,
          "priority": "medium",
          "complexityThreshold": 1000
        },
        "configuration_optimization": {
          "enabled": true,
          "priority": "low",
          "configFiles": ["package.json", "next.config.js", "tailwind.config.js"]
        }
      }
    },
    "learning": {
      "enabled": true,
      "dataRetentionDays": 30,
      "maxDataPoints": 1000,
      "patternDetection": {
        "enabled": true,
        "minPatternLength": 3,
        "confidenceThreshold": 0.7
      },
      "insightGeneration": {
        "enabled": true,
        "maxInsights": 10,
        "relevanceThreshold": 0.6
      }
    },
    "prediction": {
      "enabled": true,
      "predictionHorizon": 24,
      "confidenceThreshold": 0.8,
      "models": {
        "performance": {
          "enabled": true,
          "algorithm": "linear_regression"
        },
        "resource_usage": {
          "enabled": true,
          "algorithm": "time_series"
        },
        "improvement_impact": {
          "enabled": true,
          "algorithm": "random_forest"
        }
      }
    },
    "validation": {
      "enabled": true,
      "preValidation": true,
      "postValidation": true,
      "rollbackOnFailure": true,
      "tests": {
        "unit_tests": true,
        "integration_tests": true,
        "performance_tests": true,
        "security_tests": true
      }
    },
    "monitoring": {
      "enabled": true,
      "metrics": {
        "system": ["cpu", "memory", "disk", "network"],
        "application": ["response_time", "throughput", "error_rate"],
        "business": ["user_satisfaction", "conversion_rate", "revenue"]
      },
      "alerts": {
        "enabled": true,
        "channels": ["console", "email", "slack"],
        "thresholds": {
          "critical": 0.9,
          "warning": 0.7,
          "info": 0.5
        }
      }
    },
    "integration": {
      "orchestrator": {
        "enabled": true,
        "port": 3001,
        "syncInterval": 5000
      },
      "git": {
        "enabled": true,
        "autoCommit": true,
        "autoPush": true,
        "branch": "main",
        "commitMessage": "Auto-improvement: {type} - {description}"
      },
      "deployment": {
        "enabled": true,
        "autoDeploy": false,
        "environment": "development",
        "rollbackOnFailure": true
      }
    },
    "security": {
      "enabled": true,
      "fileAccess": {
        "whitelist": [
          "src/**/*",
          "pages/**/*",
          "components/**/*",
          "utils/**/*",
          "config/**/*"
        ],
        "blacklist": [
          "node_modules/**/*",
          ".git/**/*",
          "*.log",
          "*.tmp"
        ]
      },
      "codeValidation": {
        "enabled": true,
        "linters": ["eslint", "prettier"],
        "securityScanners": ["npm-audit", "snyk"]
      }
    },
    "reporting": {
      "enabled": true,
      "formats": ["json", "html", "csv"],
      "schedules": {
        "hourly": false,
        "daily": true,
        "weekly": true,
        "monthly": true
      },
      "retention": {
        "reports": 90,
        "metrics": 365,
        "logs": 30
      }
    }
  },
  "automation": {
    "enabled": true,
    "systems": {
      "git": {
        "enabled": true,
        "port": 3003,
        "autoCommit": true,
        "autoPush": true
      },
      "monitoring": {
        "enabled": true,
        "port": 3004,
        "interval": 30000
      },
      "testing": {
        "enabled": true,
        "port": 3005,
        "autoRun": true
      },
      "deployment": {
        "enabled": true,
        "port": 3006,
        "autoDeploy": false
      }
    }
  },
  "dashboard": {
    "enabled": true,
    "port": 3001,
    "theme": "dark",
    "refreshInterval": 5000,
    "features": {
      "realTimeUpdates": true,
      "charts": true,
      "controls": true,
      "logs": true,
      "alerts": true
    }
  }
} 
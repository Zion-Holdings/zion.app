                p.pm2_env.status === 'online' && 
                p.pm2_env.restart_time < 10
            );
            
            this.status.pm2.healthy = healthyProcesses.length === pm2Processes.length;
            this.status.pm2.lastCheck = new Date().toISOString();
            

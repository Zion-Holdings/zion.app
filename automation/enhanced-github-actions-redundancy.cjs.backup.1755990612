        }
        return line;
      });
      
      if (fixedLines.join('\n') !== content) {
        content = fixedLines.join('\n');
        fixed = true;
      }

      if (fixed) {
        fs.writeFileSync(workflowPath, content);
        this.log(`Fixed issues in workflow: ${workflowName}`, "INFO");
        return true;
      }

      return false;
    } catch (error) {

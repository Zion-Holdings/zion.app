                valid_workflows=$((valid_workflows + 1))
            fi
        fi
    done
    
    if [ $workflow_count -eq 0 ]; then
        warn "No GitHub Actions workflows found"
        return 1
    fi
    
    log "Found $workflow_count workflow(s), $valid_workflows valid"
    

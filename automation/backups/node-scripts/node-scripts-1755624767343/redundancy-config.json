{
  "pm2": {
    "enabled": true,
    "checkInterval": 30000,
    "maxRestarts": 5,
    "healthCheckTimeout": 10000,
    "processes": [
      "zion-auto-sync",
      "zion-auto-sync-cron"
    ],
    "autoRestart": true,
    "restartDelay": 5000
  },
  "githubActions": {
    "enabled": true,
    "checkInterval": 60000,
    "maxFailures": 3,
    "retryDelay": 30000,
    "workflows": [
      "marketing-sync.yml",
      "sync-health.yml"
    ],
    "autoTrigger": true,
    "healthCheckWorkflow": "sync-health.yml"
  },
  "netlify": {
    "enabled": true,
    "checkInterval": 120000,
    "maxFailures": 3,
    "healthCheckTimeout": 15000,
    "autoDeploy": true,
    "deployTimeout": 300000,
    "functions": {
      "autoRegenerate": true,
      "healthCheck": true,
      "deploymentCheck": true
    }
  },
  "marketing": {
    "enabled": true,
    "checkInterval": 7200000,
    "platforms": [
      "linkedin",
      "instagram"
    ],
    "autoSync": true,
    "fallbackScripts": [
      "automation/marketing-sync.js",
      "automation/git-sync.cjs"
    ]
  },
  "git": {
    "enabled": true,
    "checkInterval": 300000,
    "autoSync": true,
    "syncStrategy": "hardreset",
    "cleanUntracked": true,
    "garbageCollection": false,
    "remote": "origin",
    "branch": "main"
  },
  "build": {
    "enabled": true,
    "checkInterval": 600000,
    "autoRecovery": true,
    "healthChecks": [
      "build:health-check",
      "build:validate"
    ],
    "recoveryScripts": [
      "build:recovery",
      "build:auto-fix"
    ]
  },
  "monitoring": {
    "enabled": true,
    "reportInterval": 300000,
    "alertThreshold": 0.8,
    "logRetention": 30,
    "metrics": {
      "enabled": true,
      "collectSystemMetrics": true,
      "collectProcessMetrics": true,
      "collectDeploymentMetrics": true
    },
    "alerts": {
      "enabled": true,
      "channels": ["log", "console"],
      "criticalThreshold": 0.5,
      "warningThreshold": 0.8
    }
  },
  "redundancy": {
    "enabled": true,
    "failoverEnabled": true,
    "maxConcurrentChecks": 3,
    "checkTimeout": 60000,
    "retryAttempts": 3,
    "retryDelay": 10000,
    "circuitBreaker": {
      "enabled": true,
      "failureThreshold": 5,
      "recoveryTimeout": 300000
    }
  },
  "notifications": {
    "enabled": false,
    "providers": {
      "email": {
        "enabled": false,
        "smtp": {
          "host": "",
          "port": 587,
          "secure": false,
          "auth": {
            "user": "",
            "pass": ""
          }
        },
        "recipients": []
      },
      "slack": {
        "enabled": false,
        "webhook": "",
        "channel": ""
      },
      "discord": {
        "enabled": false,
        "webhook": ""
      }
    }
  }
}
{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/pages/*": ["./src/pages/*", "./pages/*"],
      "axios": ["./src/lib/axios.ts"],
      "next": ["./types/next"],
      "next/*": ["./types/next/*"]
    },
    "types": ["vite/client", "react", "vitest/globals"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    // Ensure broad globs for config files and .d.ts files are prominent
    "./*.config.js",
    "./*.config.mjs",
    "./*.config.cjs",
    "./*.config.ts", // Catches cypress.config.ts, playwright.config.ts, tailwind.config.ts, vitest.config.ts
    "./stackbit.config.ts", // Explicitly add stackbit.config.ts if not covered by above
    "./**/*.d.ts",   // Broadly include all d.ts files
    "./types/**/*.d.ts",

    // Explicitly list the four persistently problematic files
    "./vite.config.d.ts",
    "./src/types/pwa.d.ts",
    "./src/hooks/useAuth.tsx",
    "./src/components/ui/sidebar/index.tsx",

    // General source file patterns
    "./src/**/*.ts",
    "./src/**/*.tsx", // This should cover the problematic .tsx files too
    "./src/**/*.js",
    "./src/**/*.jsx",
    "./pages/**/*.ts",
    "./pages/**/*.tsx",
    "./pages/**/*.js",
    "./pages/**/*.jsx",

    // Other specific directories/patterns
    "./eslint.config.js",
    "./scripts/**/*.js",
    "./scripts/**/*.mjs",
    "./scripts/**/*.ts",
    "./tests/**/*.ts",
    "./tests/**/*.tsx",
    "./tests/**/*.js",
    "./tests/**/*.jsx",
    "./__tests__/**/*.ts",
    "./__tests__/**/*.tsx",
    "./__tests__/**/*.js",
    "./__tests__/**/*.jsx",
    "./cypress/**/*.ts",
    "./cypress/**/*.tsx",
    "./cypress/**/*.js",
    "./cypress/**/*.jsx",
    "./supabase/functions/**/*.ts",
    "./plugins/**/*.js",
    "./plugins/**/*.ts",
    "./plugins/**/*.tsx",
    "./.storybook/**/*.js",
    "./.storybook/**/*.jsx",
    "./.storybook/**/*.ts",
    "./.storybook/**/*.tsx",
    "./stories/**/*.js",
    "./stories/**/*.jsx",
    "./stories/**/*.ts",
    "./stories/**/*.tsx",
    "./pages/**/*.ts",
    "./pages/**/*.tsx",
    "./pages/**/*.js",
    "./pages/**/*.jsx"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "out",
    "coverage",
    "build",
    ".next",
    "public/build"
  ],
  "comments": {
    "warning": "This file is used by ESLint to provide type information. It's configured to be standalone and includes a broad range of files. Do not use 'extends'."
  }
}

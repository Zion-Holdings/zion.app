              uses: actions/upload-artifact@v4
              if: always()
              with:
                name: e2e-test-results
                path: |
                  test-results/
                  coverage/
                  screenshots/
                retention-days: 7
            - name: Checkout
              uses: actions/checkout@v4
            - name: Setup Node.js
              uses: actions/setup-node@v4
              with:

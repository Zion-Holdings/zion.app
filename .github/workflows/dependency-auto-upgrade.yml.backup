name: Dependency Auto-Upgrade (PR)

on:
  schedule:
    - cron: '30 4 * * 1' # weekly, Mondays 04:30 UTC
  workflow_dispatch: {}

permissions:
  contents: write
  pull-requests: write

jobs:
  upgrade:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci --no-audit --no-fund

      - name: Create upgrade branch
        run: |
          BR=chore/deps-auto-upgrade-$(date +%Y%m%d)
          git checkout -b "$BR" || git checkout "$BR"
          echo "BRANCH=$BR" >> $GITHUB_ENV

      - name: Run deps auto-upgrade script
        run: node automation/deps-auto-upgrade.cjs || true

      - name: Commit changes (if any)
        run: |
          if [ -n "$(git status --porcelain)" ]; then
            git config user.name "github-actions[bot]"
            git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
            git add -A
            git commit -m "chore(deps): weekly dependency auto-upgrade"
            git push -u origin "$BR"
          else
            echo "No dependency changes"
          fi

      - name: Open or update PR
        if: ${{ success() }}
        uses: peter-evans/create-pull-request@v6
        with:
          branch: ${{ env.BRANCH }}
          title: "chore(deps): weekly dependency auto-upgrade"
          body: |
            Automated dependency updates using npm-check-updates and audit fix.
            Includes build verification via automation script.
          commit-message: "chore(deps): weekly dependency auto-upgrade"
          labels: dependencies, automated-pr
          signoff: false
          delete-branch: true



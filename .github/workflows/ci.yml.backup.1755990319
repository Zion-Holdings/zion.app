name: CI

on:
  push:
    branches: ["**"]
    paths-ignore:
      - 'data/**'
      - 'public/**'
      - 'docs/**'
      - 'automation/logs/**'
  pull_request:
    branches: ["**"]
    paths-ignore:
      - 'data/**'
      - 'public/**'
      - 'docs/**'
      - 'automation/logs/**'
  workflow_dispatch:

permissions:
  contents: read

concurrency:
  group: ${{ github.workflow }}-${{ github.ref }}
  cancel-in-progress: true


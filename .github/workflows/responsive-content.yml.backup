name: Responsive Content Orchestrator

on:
  schedule:
    - cron: '11 */6 * * *'
  workflow_dispatch: {}

permissions:
  contents: write

concurrency:
  group: responsive-content-${{ github.ref }}
  cancel-in-progress: true

jobs:
  responsive_content:
    runs-on: ubuntu-latest
      timeout-minutes: 20
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci --no-audit --no-fund

      - name: Run responsive content workflows
        run: |
          node automation/responsive-content-orchestrator.cjs || true
          node automation/responsive-content-analyzer.cjs || true
          node automation/responsive-content-factory.cjs || true
          node scripts/generate-readme.js || true

      - name: Commit and push changes
        run: |
          if [ -n "$(git status --porcelain)" ]; then
            git config user.name "github-actions[bot]"
            git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
            git add -A
            git commit -m "chore(automation): responsive content updates [skip ci]"
            git push origin HEAD:main
          else
            echo "No changes to push"
          fi



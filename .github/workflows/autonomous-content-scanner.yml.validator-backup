name: Autonomous Content Scanner

on:
  schedule:
    - cron: '0 0 * * *'
  workflow_dispatch: {}

  contents: write

concurrency:
permissions:
  contents: write
  actions: read

  group: "autonomous-content-scanner-${{ github.ref }}"
  cancel-in-progress: true

jobs:
main:
  runs-on: ubuntu-latest
  - name: Main Job
  steps:
    - name: Checkout repository
    - uses: actions/checkout@v4
    - with:
      fetch-depth: 0
    - name: Setup Node.js
    - uses: actions/setup-node@v4
    - with:
      node-version: 20
      cache: npm
    - name: Install dependencies
    - run: npm ci --no-audit --no-fund
    - name: Run tests
    - run: npm test
    - name: Build project
    - run: npm run build

        - name: Checkout
        - uses: actions/checkout@v4
          fetch-depth: 0
        - name: Setup Node.js
        - uses: actions/setup-node@v4
          node-version: 20
          cache: npm
        - name: Install dependencies (minimal)
        - run: npm ci --omit=dev || npm ci
        - name: Run TODO/FIXME scanner
        - run: node automation/todo-scanner.cjs | cat
        - name: Build pages/docs registry
        - run: node automation/docs-pages-indexer.cjs | cat
        - name: Commit and push changes to main
        - run: |
          if [ -n "$(git status --porcelain)" ]; then
            git config user.name "github-actions[bot]"
            git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
            git add -A
            git commit -m "chore(automation): update todo report and content registry [skip ci]"
            git push origin HEAD:$(git rev-parse --abbrev-ref HEAD)
          else
            echo "No changes to commit"
          fi

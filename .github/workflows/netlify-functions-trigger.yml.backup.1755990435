    runs-on: ubuntu-latest
    timeout-minutes: 15
    env:
      NETLIFY_BASE_URL: ${{ vars.NETLIFY_BASE_URL }}
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '20'
          cache: 'npm'

      - name: Install dependencies
        run: npm ci --no-audit --no-fund


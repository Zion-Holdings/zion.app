name: PR Size Labeler

on:
  pull_request:
    types: [opened, synchronize, reopened]


concurrency:
  group: "github.workflow-${{ github.ref }}"
  cancel-in-progress: true

  contents: read

jobs:

  size-label:
          GITHUB_TOKEN: ${{ secrets.GITHUB_TOKEN }}
          xs_label: size/XS
          s_label: size/S
          m_label: size/M
          l_label: size/L
          xl_label: size/XL
          fail_if_xl: false"
          update_always: true
{
  "mcp": {
    "name": "bolt-automation-mcp",
    "version": "1.0.0",
    "description": "Model Context Protocol integration for Bolt.new Zion app automation",
    "server": {
      "transport": "stdio",
      "capabilities": {
        "tools": {},
        "resources": {}
      }
    },
    "client": {
      "name": "bolt-automation-client",
      "version": "1.0.0",
      "transport": "stdio"
    }
  },
  "automation": {
    "workflows": {
      "daily": {
        "enabled": true,
        "schedule": "0 2 * * *",
        "steps": [
          "analyze_project_structure",
          "generate_automation_report",
          "optimize_build_process",
          "monitor_performance",
          "update_dependencies",
          "security_audit",
          "performance_optimization",
          "cleanup_project"
        ]
      },
      "weekly": {
        "enabled": true,
        "schedule": "0 3 * * 0",
        "steps": [
          "security_audit",
          "performance_optimization",
          "update_dependencies",
          "generate_documentation"
        ]
      },
      "deployment": {
        "enabled": true,
        "trigger": "manual",
        "steps": [
          "backup_system",
          "run_tests",
          "deploy_automation",
          "monitor_performance"
        ]
      }
    },
    "monitoring": {
      "performance": {
        "enabled": true,
        "interval": "30m",
        "metrics": ["memory", "cpu", "response_time"]
      },
      "errors": {
        "enabled": true,
        "interval": "5m",
        "threshold": 10
      },
      "security": {
        "enabled": true,
        "interval": "1h",
        "checks": ["vulnerabilities", "dependencies", "permissions"]
      }
    },
    "integrations": {
      "existing_automation": {
        "enabled": true,
        "enhancement": true,
        "compatibility": true
      },
      "ci_cd": {
        "enabled": false,
        "providers": ["github", "netlify", "vercel"]
      },
      "monitoring": {
        "enabled": false,
        "providers": ["sentry", "datadog", "newrelic"]
      }
    }
  },
  "tools": {
    "project_analysis": {
      "analyze_project_structure": {
        "description": "Analyze the current project structure and identify optimization opportunities",
        "enabled": true
      },
      "generate_automation_report": {
        "description": "Generate a comprehensive report of all automation systems and their status",
        "enabled": true
      }
    },
    "optimization": {
      "optimize_build_process": {
        "description": "Analyze and optimize the build process for better performance",
        "enabled": true
      },
      "performance_optimization": {
        "description": "Analyze and optimize performance bottlenecks",
        "enabled": true
      }
    },
    "monitoring": {
      "monitor_performance": {
        "description": "Monitor application performance and generate optimization recommendations",
        "enabled": true
      },
      "monitor_errors": {
        "description": "Monitor and analyze error logs for patterns and issues",
        "enabled": true
      }
    },
    "deployment": {
      "deploy_automation": {
        "description": "Deploy automation scripts and configurations",
        "enabled": true,
        "environments": ["development", "staging", "production"]
      },
      "backup_system": {
        "description": "Create a comprehensive backup of the automation system",
        "enabled": true
      },
      "restore_system": {
        "description": "Restore the automation system from a backup",
        "enabled": true
      }
    },
    "maintenance": {
      "update_dependencies": {
        "description": "Update project dependencies and check for security vulnerabilities",
        "enabled": true
      },
      "run_tests": {
        "description": "Run comprehensive tests across the project",
        "enabled": true
      },
      "generate_documentation": {
        "description": "Generate comprehensive documentation for the project",
        "enabled": true
      },
      "cleanup_project": {
        "description": "Clean up temporary files, logs, and optimize project structure",
        "enabled": true
      }
    },
    "security": {
      "security_audit": {
        "description": "Perform a comprehensive security audit of the project",
        "enabled": true
      }
    },
    "seo": {
      "optimize_seo": {
        "description": "Analyze and optimize SEO settings and content",
        "enabled": true
      }
    }
  },
  "resources": {
    "project_structure": {
      "uri": "file://project-structure",
      "name": "Project Structure",
      "description": "Current project structure and organization",
      "mimeType": "application/json",
      "enabled": true
    },
    "automation_status": {
      "uri": "file://automation-status",
      "name": "Automation Status",
      "description": "Current status of all automation systems",
      "mimeType": "application/json",
      "enabled": true
    },
    "performance_metrics": {
      "uri": "file://performance-metrics",
      "name": "Performance Metrics",
      "description": "Performance metrics and optimization data",
      "mimeType": "application/json",
      "enabled": true
    },
    "error_logs": {
      "uri": "file://error-logs",
      "name": "Error Logs",
      "description": "Error logs and debugging information",
      "mimeType": "text/plain",
      "enabled": true
    },
    "security_report": {
      "uri": "file://security-report",
      "name": "Security Report",
      "description": "Security audit results and recommendations",
      "mimeType": "application/json",
      "enabled": true
    }
  },
  "logging": {
    "level": "info",
    "format": "json",
    "output": {
      "console": true,
      "file": "automation/logs/mcp-automation.log"
    }
  },
  "notifications": {
    "enabled": true,
    "channels": {
      "console": true,
      "file": true,
      "email": false,
      "slack": false
    }
  }
} 
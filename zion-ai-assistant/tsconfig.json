{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "types": ["node"],
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/server", "src/shared"]
}
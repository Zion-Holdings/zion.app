# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000
# Base URL of the Node.js authentication service used for signup
# Example: http://localhost:3001
INTERNAL_AUTH_SERVICE_URL=your_internal_auth_service_url_here

# Internal Authentication Service (Required for user signups)
# Replace with the actual URL of your dedicated authentication service/microservice
INTERNAL_AUTH_SERVICE_URL=http://localhost:3001/api/auth
# Example: http://auth-service.internal:8080 or http://localhost:PORT/path_to_auth_service

# Wallet & Web3 Configuration
NEXT_PUBLIC_REOWN_PROJECT_ID=your_reown_project_id_here
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# Sentry Error Monitoring
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_RELEASE=1.0.0

# Stripe Payment Processing
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
NEXT_PUBLIC_STRIPE_PK=
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Cloudinary Media Management
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
FACEBOOK_CLIENT_ID=your_facebook_client_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
CLIENT_URL=http://localhost:5173

# Sentry Configuration
# These DSNs are required for error reporting.
# NEXT_PUBLIC_SENTRY_DSN is used in the browser and SENTRY_DSN is used on the server-side.
# Get these from your Sentry project settings.
NEXT_PUBLIC_SENTRY_DSN="your_next_public_sentry_dsn_here"
SENTRY_DSN="your_sentry_dsn_here"
# Leaving the above placeholders unchanged will disable Sentry at runtime.
# SENTRY_ORG="your_sentry_organization_slug" # Optional: if using Sentry CLI to upload sourcemaps
# SENTRY_PROJECT="your_sentry_project_slug" # Optional: if using Sentry CLI to upload sourcemaps
# SENTRY_AUTH_TOKEN="" # Optional: if using Sentry CLI to upload sourcemaps during build
# Optional environment variables for Playwright tests polling the Sentry Events API
SENTRY_API_TOKEN=""
SENTRY_PROJECT_SLUG=""
SENTRY_ORG_SLUG=""

NEXT_PUBLIC_SOCIAL_TWITTER_URL="https://twitter.com/ZionTechGroup"

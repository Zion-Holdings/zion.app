# Next.js Application Configuration
NODE_ENV=development
NODE_VERSION=20.18.1
NODE_OPTIONS="--max-old-space-size=4096 --openssl-legacy-provider"

# Build Configuration
NEXT_TELEMETRY_DISABLED=1
NEXT_SHARP_PATH=./node_modules/sharp

# Performance Configuration
NEXT_IMAGE_DOMAINS=
NEXT_IMAGE_FORMATS=webp,avif

# Security Configuration
NEXTAUTH_SECRET=your-secret-key-here
NEXTAUTH_URL=http://localhost:3000

# Database Configuration (if using Supabase)
NEXT_PUBLIC_SUPABASE_URL=your-supabase-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# AI Services Configuration
OPENAI_API_KEY=your-openai-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Analytics Configuration
NEXT_PUBLIC_GA_MEASUREMENT_ID=your-ga-id
GOOGLE_ANALYTICS_PRIVATE_KEY=your-ga-private-key

# Marketing and Social Media
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
INSTAGRAM_ACCESS_TOKEN=your-instagram-access-token

# Monitoring and Health Checks
HEALTH_CHECK_INTERVAL=30000
REDUNDANCY_CHECK_INTERVAL=60000
BUILD_MONITOR_INTERVAL=120000

# Automation Configuration
AUTOMATION_ENABLED=true
REDUNDANCY_SYSTEM_ENABLED=true
PM2_AUTO_RESTART=true
GITHUB_ACTIONS_AUTO_TRIGGER=true

# Logging Configuration
LOG_LEVEL=info
LOG_ROTATION_MAX_SIZE=10M
LOG_ROTATION_RETAIN=30
LOG_COMPRESSION=true

# Development Tools
ESLINT_ENABLE=true
PRETTIER_ENABLE=true
HUSKY_ENABLE=true
PRE_COMMIT_ENABLE=true

# Build Optimization
BUILD_OPTIMIZATION=true
BUNDLE_ANALYZER=false
SOURCE_MAPS=true
MINIFICATION=true

# Testing Configuration
TEST_ENVIRONMENT=development
TEST_COVERAGE_THRESHOLD=80
PLAYWRIGHT_BROWSERS=chromium

# Deployment Configuration
DEPLOYMENT_ENVIRONMENT=development
NETLIFY_SITE_ID=your-netlify-site-id
NETLIFY_ACCESS_TOKEN=your-netlify-token
GITHUB_REPOSITORY=Zion-Holdings/zion.app
GITHUB_TOKEN=your-github-token
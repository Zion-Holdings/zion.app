# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Authentication
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000
# URL of the Node.js authentication service used for signup and health checks
# Example: http://localhost:3001
INTERNAL_AUTH_SERVICE_URL=http://localhost:3001

# Wallet & Web3 Configuration
NEXT_PUBLIC_REOWN_PROJECT_ID=your_reown_project_id_here
NEXT_PUBLIC_ALCHEMY_API_KEY=your_alchemy_api_key_here

# Sentry Error Monitoring
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development
NEXT_PUBLIC_SENTRY_RELEASE=1.0.0

# Optional Feature Flags
# Enable React DevTools in non-production environments
NEXT_PUBLIC_DEVTOOLS=false

# Application Environment
# Used to distinguish between development, staging, and production environments
# Possible values: development, staging, production
NEXT_PUBLIC_APP_ENV=development

# Stripe Payment Processing
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here
NEXT_PUBLIC_STRIPE_PK=
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here
NEXT_PUBLIC_STRIPE_TEST_PUBLISHABLE_KEY=your_stripe_test_publishable_key_here
NEXT_PUBLIC_STRIPE_TEST_KEY=
STRIPE_TEST_SECRET_KEY=your_stripe_test_secret_key_here
STRIPE_TEST_MODE=true
NEXT_PUBLIC_STRIPE_TEST_MODE=true

# Cloudinary Media Management
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name_here
CLOUDINARY_API_KEY=your_cloudinary_api_key_here
CLOUDINARY_API_SECRET=your_cloudinary_api_secret_here

# OAuth Providers
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
FACEBOOK_CLIENT_ID=your_facebook_client_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here
TWITTER_CLIENT_ID=your_twitter_client_id_here
TWITTER_CLIENT_SECRET=your_twitter_client_secret_here
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
MICROSOFT_CLIENT_ID=your_microsoft_client_id_here
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret_here
MICROSOFT_TENANT_ID=common # Or your specific Azure AD tenant ID
CLIENT_URL=http://localhost:5173

# Sentry Configuration
# These DSNs are required for error reporting.
# NEXT_PUBLIC_SENTRY_DSN is used in the browser and SENTRY_DSN is used on the server-side.
# Get these from your Sentry project settings.
NEXT_PUBLIC_SENTRY_DSN="your_next_public_sentry_dsn_here"
SENTRY_DSN="your_sentry_dsn_here"
# Web Push VAPID keys
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:you@example.com
# Leaving the above placeholders unchanged will disable Sentry at runtime.
# SENTRY_ORG="your_sentry_organization_slug" # Optional: if using Sentry CLI to upload sourcemaps
# SENTRY_PROJECT="your_sentry_project_slug" # Optional: if using Sentry CLI to upload sourcemaps
# SENTRY_AUTH_TOKEN="" # Optional: if using Sentry CLI to upload sourcemaps during build
# Optional environment variables for Playwright tests polling the Sentry Events API
SENTRY_API_TOKEN=""
SENTRY_PROJECT_SLUG=""
SENTRY_ORG_SLUG=""

# Watchdog Monitoring (Optional)
# Used by scripts/watchdog.js for alerts.
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here_if_using_watchdog_alerts

# Datadog Logging (Optional)
NEXT_PUBLIC_DD_CLIENT_TOKEN=your_datadog_client_token
NEXT_PUBLIC_DD_SITE=datadoghq.com
NEXT_PUBLIC_DD_SERVICE=zion-app
NEXT_PUBLIC_DD_ENV=development
DD_SERVICE=zion-app-server
DD_ENV=development

NEXT_PUBLIC_SOCIAL_TWITTER_URL="https://twitter.com/ZionTechGroup"
NEXT_PUBLIC_SOCIAL_LINKEDIN_URL="https://linkedin.com/company/ziontechgroup"
NEXT_PUBLIC_SOCIAL_FACEBOOK_URL="https://facebook.com/ZionTechGroup"
NEXT_PUBLIC_SOCIAL_INSTAGRAM_URL="https://instagram.com/ZionTechGroup"
NEXT_PUBLIC_SOCIAL_GITHUB_URL="https://github.com/ZionTechGroup"

# Example API URL for specific pages like /static-props-example
EXAMPLE_API_URL="http://localhost:3000/api/example"

# Public status page URL
NEXT_PUBLIC_STATUS_PAGE_URL="https://status.ziontechgroup.com"

#-------------------------------------------------------------------------------
# API Monitoring Script Configuration
#-------------------------------------------------------------------------------
# Base URL for the Django backend (used by the monitoring script)
DJANGO_API_BASE_URL=http://localhost:8000
# Base URL for the Next.js API (used by the monitoring script)
NEXTJS_API_BASE_URL=http://localhost:3000
# Base URL for the Custom Express server (used by the monitoring script)
CUSTOM_SERVER_BASE_URL=http://localhost:3001
# Webhook URL used by the frontend to send captured errors for automatic fixes
NEXT_PUBLIC_AUTOFIX_WEBHOOK_URL="http://localhost:3001/webhook/trigger-fix"
# Webhook URL for sending alerts (e.g., Slack, Discord)
ALERT_WEBHOOK_URL=
# Log level for the monitoring script (e.g., error, warn, info, debug)
LOG_LEVEL=info

# Sentry Configuration
# These DSNs are required for error reporting.
# NEXT_PUBLIC_SENTRY_DSN is used in the browser and SENTRY_DSN is used on the server-side.
# Get these from your Sentry project settings.
NEXT_PUBLIC_SENTRY_DSN="your_next_public_sentry_dsn_here"
SENTRY_DSN="your_sentry_dsn_here"
# Leaving the above placeholders unchanged will disable Sentry at runtime.
# SENTRY_ORG="your_sentry_organization_slug" # Optional: if using Sentry CLI to upload sourcemaps
# SENTRY_PROJECT="your_sentry_project_slug" # Optional: if using Sentry CLI to upload sourcemaps
# SENTRY_AUTH_TOKEN="" # Optional: if using Sentry CLI to upload sourcemaps during build
# Optional environment variables for Playwright tests polling the Sentry Events API
SENTRY_API_TOKEN=""
SENTRY_PROJECT_SLUG=""
SENTRY_ORG_SLUG=""
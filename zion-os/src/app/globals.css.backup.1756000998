@tailwind base;
@tailwind components;
@tailwind utilities;

:root {
  --bg: #000000;
  --fg: #ffffff;
  --accent: #3b82f6;
  --accent-hover: #2563eb;
  --border: rgba(255, 255, 255, 0.1);
  --border-hover: rgba(255, 255, 255, 0.2);
}

@layer base {
  html {
    scroll-behavior: smooth;
  }
  
  body {
    background: var(--bg);
    color: var(--fg);
    font-feature-settings: "rlig" 1, "calt" 1;
  }
  
  * {
    box-sizing: border-box;
  }
}

html {
  scroll-behavior: smooth;
}


/* CSS Variables for modern theming */
:root {
  --background: #000000;
  --foreground: #ffffff;
  --primary: #3b82f6;
  --primary-foreground: #ffffff;
  --secondary: #1f2937;
  --secondary-foreground: #f9fafb;
  --accent: #10b981;
  --accent-foreground: #ffffff;
  --muted: #374151;
  --muted-foreground: #9ca3af;
  --border: #374151;
  --input: #374151;
  --ring: #3b82f6;
  --radius: 0.75rem;
  --shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  
  /* Futuristic color palette */
  --neon-blue: #00d4ff;
  --neon-purple: #8b5cf6;
  --neon-pink: #ec4899;
  --neon-green: #10b981;
  --neon-orange: #f59e0b;
  --neon-cyan: #06b6d4;
  --neon-yellow: #eab308;
  --neon-red: #ef4444;
  --quantum-glow: 0 0 20px rgba(0, 255, 255, 0.5);
  --holographic-glow: 0 0 30px rgba(139, 92, 246, 0.6);
  --cyberpunk-glow: 0 0 25px rgba(236, 73, 153, 0.7);
  --neural-pulse: 0 0 40px rgba(16, 185, 129, 0.4);
  --quantum-entanglement: 0 0 50px rgba(139, 92, 246, 0.3);
  --futuristic-shadow: 0 0 60px rgba(0, 255, 255, 0.3);
  --holographic-shadow: 0 0 80px rgba(139, 92, 246, 0.4);
  --cyberpunk-shadow: 0 0 70px rgba(236, 73, 153, 0.5);
  --quantum-field: 0 0 100px rgba(0, 255, 255, 0.1);
  --holographic-matrix: 0 0 120px rgba(139, 92, 246, 0.15);
  --neural-network: 0 0 90px rgba(16, 185, 129, 0.2);
  --quantum-ripple: 0 0 150px rgba(0, 255, 255, 0.08);
  --holographic-wave: 0 0 200px rgba(139, 92, 246, 0.12);
  --cyberpunk-pulse: 0 0 180px rgba(236, 73, 153, 0.1);
  
  /* New Enhanced Variables */
  --quantum-aura: 0 0 300px rgba(0, 255, 255, 0.05);
  --holographic-aura: 0 0 400px rgba(139, 92, 246, 0.08);
  --neural-aura: 0 0 350px rgba(16, 185, 129, 0.06);
  --cyberpunk-aura: 0 0 450px rgba(236, 73, 153, 0.07);
  --quantum-resonance: 0 0 600px rgba(0, 255, 255, 0.03);
  --holographic-resonance: 0 0 800px rgba(139, 92, 246, 0.04);
  --neural-resonance: 0 0 700px rgba(16, 185, 129, 0.03);
  --cyberpunk-resonance: 0 0 900px rgba(236, 73, 153, 0.04);
  
  /* 2027 Enhanced Variables */
  --quantum-consciousness: 0 0 1000px rgba(0, 255, 255, 0.02);
  --holographic-metaverse: 0 0 1200px rgba(139, 92, 246, 0.03);
  --neural-evolution: 0 0 1100px rgba(16, 185, 129, 0.025);
  --cyberpunk-future: 0 0 1300px rgba(236, 73, 153, 0.035);
  --space-quantum: 0 0 1500px rgba(59, 130, 246, 0.02);
  --biotech-neural: 0 0 1400px rgba(16, 185, 129, 0.025);
  
  /* 2029 Ultra-Futuristic Variables */
  --quantum-consciousness-2029: 0 0 2000px rgba(0, 255, 255, 0.015);
  --holographic-metaverse-2029: 0 0 2500px rgba(139, 92, 246, 0.025);
  --neural-evolution-2029: 0 0 2200px rgba(16, 185, 129, 0.02);
  --cyberpunk-future-2029: 0 0 2800px rgba(236, 73, 153, 0.03);
  --space-quantum-2029: 0 0 3000px rgba(59, 130, 246, 0.015);
  --biotech-neural-2029: 0 0 2600px rgba(16, 185, 129, 0.02);
  --ai-consciousness-2029: 0 0 3500px rgba(139, 92, 246, 0.02);
  --quantum-space-2029: 0 0 4000px rgba(0, 255, 255, 0.01);
}

/* Enhanced Animations */
@keyframes spin-slow {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.animate-spin-slow {
  animation: spin-slow 20s linear infinite;
}

/* Enhanced Scrollbar */
::-webkit-scrollbar {
  width: 12px;
}

::-webkit-scrollbar-track {
  background: rgba(0, 0, 0, 0.4);
  border-radius: 6px;
  border: 1px solid rgba(0, 255, 255, 0.2);
}

::-webkit-scrollbar-thumb {
  background: linear-gradient(45deg, var(--neon-cyan), var(--neon-purple));
  border-radius: 6px;
  border: 2px solid rgba(0, 0, 0, 0.3);
  box-shadow: var(--quantum-glow);
}

::-webkit-scrollbar-thumb:hover {
  background: linear-gradient(45deg, var(--neon-purple), var(--neon-pink));
  box-shadow: var(--holographic-glow);
}

/* Enhanced Selection */
::selection {
  background: rgba(0, 255, 255, 0.35);
  color: white;
  text-shadow: 0 0 10px rgba(0, 255, 255, 0.6);
}

::-moz-selection {
  background: rgba(0, 255, 255, 0.5);
  color: white;
  text-shadow: 0 0 15px rgba(0, 255, 255, 0.9);
}

/* Enhanced Focus States */

/* 2029 Ultra-Futuristic Effects */
.quantum-consciousness-2029 {
  box-shadow: var(--quantum-consciousness-2029);
  animation: quantum-pulse-2029 8s ease-in-out infinite;
}

.holographic-metaverse-2029 {
  box-shadow: var(--holographic-metaverse-2029);
  animation: holographic-float-2029 12s ease-in-out infinite;
}

.neural-evolution-2029 {
  box-shadow: var(--neural-evolution-2029);
  animation: neural-pulse-2029 10s ease-in-out infinite;
}

.cyberpunk-future-2029 {
  box-shadow: var(--cyberpunk-future-2029);
  animation: cyberpunk-glow-2029 6s ease-in-out infinite;
}

.space-quantum-2029 {
  box-shadow: var(--space-quantum-2029);
  animation: space-quantum-2029 15s ease-in-out infinite;
}

.ai-consciousness-2029 {
  box-shadow: var(--ai-consciousness-2029);
  animation: ai-consciousness-2029 20s ease-in-out infinite;
}

/* 2029 Animation Keyframes */
@keyframes quantum-pulse-2029 {
  0%, 100% { transform: scale(1); opacity: 1; }
  50% { transform: scale(1.05); opacity: 0.8; }
}

@keyframes holographic-float-2029 {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  25% { transform: translateY(-10px) rotate(1deg); }
  50% { transform: translateY(-5px) rotate(-1deg); }
  75% { transform: translateY(-15px) rotate(0.5deg); }
}

@keyframes neural-pulse-2029 {
  0%, 100% { transform: scale(1); filter: brightness(1); }
  50% { transform: scale(1.02); filter: brightness(1.2); }
}

@keyframes cyberpunk-glow-2029 {
  0%, 100% { filter: hue-rotate(0deg) brightness(1); }
  50% { filter: hue-rotate(30deg) brightness(1.1); }
}

@keyframes space-quantum-2029 {
  0%, 100% { transform: translateX(0px) scale(1); }
  33% { transform: translateX(5px) scale(1.01); }
  66% { transform: translateX(-5px) scale(0.99); }
}

@keyframes ai-consciousness-2029 {
  0%, 100% { transform: rotate(0deg) scale(1); }
  25% { transform: rotate(1deg) scale(1.02); }
  50% { transform: rotate(-1deg) scale(0.98); }
  75% { transform: rotate(0.5deg) scale(1.01); }
}

/* Enhanced Futuristic Gradients */
.bg-quantum-gradient-2029 {
  background: linear-gradient(135deg, 
    rgba(0, 255, 255, 0.1) 0%, 
    rgba(139, 92, 246, 0.1) 25%, 

}

/* Enhanced Neon Effects */
.neon-glow-2029 {
  text-shadow: 
    0 0 5px currentColor,
    0 0 10px currentColor,
    0 0 15px currentColor,
    0 0 20px currentColor;
  animation: neon-flicker-2029 3s ease-in-out infinite;
}

@keyframes neon-flicker-2029 {
  0%, 100% { opacity: 1; }
  50% { opacity: 0.8; }
  75% { opacity: 0.9; }
}

/* Quantum Field Effects */
.quantum-field-2029 {
  position: relative;
  overflow: hidden;
}

.quantum-field-2029::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: conic-gradient(
    from 0deg,
    transparent,
    rgba(0, 255, 255, 0.1),
    transparent,
    rgba(139, 92, 246, 0.1),
    transparent
  );
  animation: quantum-rotation-2029 20s linear infinite;
}

@keyframes quantum-rotation-2029 {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* Holographic Matrix */
.holographic-matrix-2029 {
  background-image: 
    linear-gradient(90deg, transparent 98%, rgba(139, 92, 246, 0.3) 100%),
    linear-gradient(0deg, transparent 98%, rgba(139, 92, 246, 0.3) 100%);
  background-size: 60px 60px;
  animation: matrix-scroll-2029 30s linear infinite;
}

@keyframes matrix-scroll-2029 {
  0% { background-position: 0px 0px; }
  100% { background-position: 60px 60px; }
}

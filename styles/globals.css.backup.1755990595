@media (min-width: 1024px) {
  .container-responsive {
    padding: 0 clamp(2rem, 6vw, 4rem);
  }
}

/* Futuristic Animations and Effects */
@keyframes neon-pulse {
  0%, 100% {
    box-shadow: var(--neon-cyan);
  }
  50% {
    box-shadow: var(--neon-purple);
  }
}

@keyframes neon-glow {
  0%, 100% {
    text-shadow: var(--neon-cyan);
  }
  25% {
    text-shadow: var(--neon-purple);
  }
  50% {
    text-shadow: var(--neon-pink);
  }
  75% {
    text-shadow: var(--neon-blue);
  }
}

@keyframes float {
  0%, 100% {
    transform: translateY(0px);
  }
  50% {
    transform: translateY(-20px);
  }
}

@keyframes rotate-3d {
  0% {
    transform: rotateY(0deg) rotateX(0deg);
  }
  100% {
    transform: rotateY(360deg) rotateX(360deg);
  }
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

/* Futuristic utility classes */
.neon-pulse {
  animation: neon-pulse 2s ease-in-out infinite;
}

.neon-glow {
  animation: neon-glow 3s ease-in-out infinite;
}

.float {
  animation: float 6s ease-in-out infinite;
}

.rotate-3d {
  animation: rotate-3d 20s linear infinite;
}

.shimmer {
  background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
  background-size: 200% 100%;
  animation: shimmer 2s infinite;
}

/* Enhanced hover effects */
.hover-neon:hover {
  box-shadow: var(--neon-cyan);
  transition: box-shadow 0.3s ease;
}

.hover-glow:hover {
  box-shadow: var(--glow-cyan);
  transition: box-shadow 0.3s ease;
}

/* Futuristic borders */
.border-neon {
  border: 1px solid transparent;
  background: linear-gradient(45deg, var(--primary-cyan), var(--primary-purple), var(--primary-pink)) border-box;
  -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
  -webkit-mask-composite: destination-out;
  mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
  mask-composite: exclude;
}

/* Enhanced gradients */
.gradient-futuristic {
  background: linear-gradient(135deg, 
    var(--primary-cyan) 0%, 
    var(--primary-blue) 25%, 
    var(--primary-purple) 50%, 
    var(--primary-pink) 75%, 
    var(--primary-orange) 100%
  );
  background-size: 400% 400%;
  animation: shimmer 4s ease infinite;
}

/* Responsive futuristic effects */
@media (max-width: 768px) {
  .neon-pulse, .neon-glow {
    animation-duration: 3s;
  }
  
  .float {
    animation-duration: 8s;
  }
}

/* High contrast mode adjustments */
@media (prefers-contrast: high) {
  .neon-pulse, .neon-glow {
    animation: none;
  }
  
  .border-neon {
    border: 2px solid var(--primary-cyan);
  }
}

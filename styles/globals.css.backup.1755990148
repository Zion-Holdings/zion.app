/* Responsive Design Enhancements */
@media (max-width: 768px) {
  .card-futuristic {
    border-radius: 12px;
  }
  
  .btn-futuristic {
    padding: 10px 20px;
    font-size: 14px;
  }
}

@media (max-width: 480px) {
  .quantum-grid {
    background-size: 30px 30px;
  }
  
  .btn-futuristic {
    padding: 8px 16px;
    font-size: 13px;
  }
}

/* Accessibility Improvements */
@media (prefers-reduced-motion: reduce) {
  .quantum-pulse,
  .consciousness-float,
  .space-rotate,
  .neural-network {
    animation: none;
  }
  
  .btn-futuristic::before {
    display: none;
  }
}

/* High Contrast Mode Support */
@media (prefers-contrast: high) {
  .card-futuristic {
    border-width: 2px;
    background: rgba(0, 0, 0, 0.95);
  }
  
  .btn-futuristic {
    border: 2px solid var(--neon-cyan);
  }
}

/* Dark Mode Enhancements */
@media (prefers-color-scheme: dark) {
  :root {
    --quantum-glow: 0 0 25px rgba(0, 212, 255, 0.6);
    --consciousness-glow: 0 0 30px rgba(168, 85, 247, 0.7);
    --space-glow: 0 0 35px rgba(59, 130, 246, 0.5);
  }
}

/* Print Styles */
@media print {
  .btn-futuristic,
  .card-futuristic:hover {
    transform: none;
    box-shadow: none;
  }
  
  .quantum-pulse,
  .consciousness-float,
  .space-rotate,
  .neural-network {
    animation: none;
  }
}


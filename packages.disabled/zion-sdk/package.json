{
  "name": "@zion/sdk",
  "version": "0.1.0",
  "description": "Zion OS TypeScript SDK with React helpers",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./ai": {
      "import": "./dist/ai/helpers.js",
      "types": "./dist/ai/helpers.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/react/index.ts src/ai/helpers.ts --format esm --dts --sourcemap --clean",
    "dev": "tsup src/index.ts --watch",
    "lint": "eslint . || true",
    "test": "vitest run || true"
  },
  "dependencies": {
    "zod": "^3.23.8"
  },
  "peerDependencies": {
    "react": ">=17 <20"
  },
  "optionalDependencies": {
    "openai": "^4.55.0"
  },
  "devDependencies": {
    "typescript": "^5.6.3",
    "tsup": "^8.1.0",
    "vitest": "^2.1.3",
    "eslint": "^9.11.1",
    "@types/react": "^18.3.3"
  }
}